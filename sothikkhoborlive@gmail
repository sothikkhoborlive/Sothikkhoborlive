const adminPassword = "admin123";  // ‡¶è‡¶á ‡¶™‡¶æ‡¶∏‡¶ì‡ßü‡¶æ‡¶∞‡ßç‡¶° ‡¶¨‡ßç‡¶Ø‡¶¨‡¶π‡¶æ‡¶∞ ‡¶ï‡¶∞‡ßá ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶°‡¶Æ‡¶ø‡¶® ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡¶¨‡ßá

document.getElementById("adminLoginBtn").addEventListener("click", function() {
    const password = document.getElementById("adminPassword").value;
    if (password === adminPassword) {
        alert("‡¶≤‡¶ó ‡¶á‡¶® ‡¶∏‡¶´‡¶≤ ‡¶π‡ßü‡ßá‡¶õ‡ßá!");
        document.getElementById("adminPanel").innerHTML = `
            <h3>Admin Panel</h3>
            <button id="deleteNewsBtn">‡¶®‡¶ø‡¶â‡¶ú ‡¶Æ‡ßÅ‡¶õ‡ßá ‡¶´‡ßá‡¶≤‡ßÅ‡¶®</button>
        `;
        document.getElementById("deleteNewsBtn").addEventListener("click", deleteNews);
    } else {
        alert("‡¶™‡¶æ‡¶∏‡¶ì‡ßü‡¶æ‡¶∞‡ßç‡¶° ‡¶≠‡ßÅ‡¶≤!");
    }
});

// ‡¶®‡¶ø‡¶â‡¶ú ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶´‡¶∞‡ßç‡¶Æ ‡¶∏‡¶æ‡¶¨‡¶Æ‡¶ø‡¶ü ‡¶ï‡¶∞‡¶æ‡¶∞ ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
document.getElementById("newsForm").addEventListener("submit", function(e) {
    e.preventDefault();

    const headline = document.getElementById("headline").value;
    const description = document.getElementById("description").value;
    const image = document.getElementById("image").files[0];

    if (!headline || !description || !image) {
        alert("‡¶∏‡¶¨ ‡¶§‡¶•‡ßç‡¶Ø ‡¶™‡ßÇ‡¶∞‡ßç‡¶£ ‡¶ï‡¶∞‡ßÅ‡¶®!");
        return;
    }

    const formData = new FormData();
    formData.append("headline", headline);
    formData.append("description", description);
    formData.append("image", image);

    const imageURL = URL.createObjectURL(image);

    const postedNewsDiv = document.getElementById("postedNews");

    const newsItem = document.createElement("div");
    newsItem.innerHTML = `
        <h3>${headline}</h3>
        <img src="${imageURL}" alt="‡¶®‡¶ø‡¶â‡¶ú ‡¶õ‡¶¨‡¶ø" style="width:100%; max-height:300px; object-fit:cover;">
        <p>${description}</p>
    `;
    postedNewsDiv.appendChild(newsItem);

    document.getElementById("newsForm").reset();
});

// ‡¶®‡¶ø‡¶â‡¶ú ‡¶Æ‡ßÅ‡¶õ‡ßá ‡¶´‡ßá‡¶≤‡¶æ‡¶∞ ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
function deleteNews() {
    const postedNewsDiv = document.getElementById("postedNews");
    postedNewsDiv.innerHTML = '';  // ‡¶∏‡¶Æ‡¶∏‡ßç‡¶§ ‡¶®‡¶ø‡¶â‡¶ú ‡¶Æ‡ßÅ‡¶õ‡ßá ‡¶´‡ßá‡¶≤‡¶¨‡ßá
}
